@model IEnumerable<MVCFinalProject.Models.Recipe>

@{
    ViewData["Title"] = "MyRecipes";
    Layout = "~/Views/Shared/_ChefLayout.cshtml";
}


<div class="card">
    <div class="card-body">
       <h4 class="card-title">My Recipes @Model.Count()</h4>
        <p>
         <a class="btn btn-primary" asp-action="CreateRecipe">Create New</a>
       </p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RecipeImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
           
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>
                        <td><img src="@Url.Content("~/Images/"+item.RecipeImg)"  /></td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.CategoryId)
            </td>
            
            <td>                             
                <a class="btn btn-danger" asp-action="DeleteRecipe" asp-route-id="@item.RecipeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
   </div>
  </div>
</div>