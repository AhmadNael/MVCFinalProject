@model Userinfo

@{
    Layout = "~/views/shared/LoginAndRegister.cshtml";
}

<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        @* <div class="brand-logo">
                            <img src="~/Chef/images/logo-dark.svg">
                        </div> *@
                       
                        <h3>Register</h3>
                        <form asp-action="Register" method="post" class="pt-3">
                            <!-- radio check box -->
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="RoleId" id="flexRadioDefault1" value="2">
                                <label class="form-check-label" for="flexRadioDefault1">
                                    Chef
                                </label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" name="RoleId" id="flexRadioDefault2" checked value="3">
                                <label class="form-check-label" for="flexRadioDefault2">
                                   Customer
                                </label>
                            </div>

                            <!-- radio check box -->
                            <div class="form-group">
                                <input asp-for="FirstName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="First name">
                            </div>         
                            <div class="form-group">
                                <input asp-for="LastName" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Last name">
                            </div>
                            <div class="form-group">
                                <input asp-for="Gender" type="text" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Gender">
                                
                            </div>
                            <div class="form-group ">
                                <label asp-for="BirthDate" class="control-label"></label>
                                <input asp-for="BirthDate" class="form-control" />
                                
                            </div>
                            <div class="form-group">
                                <input type="email" name="Email" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Email">
                            </div>
                            <div class="form-group">
                                <input type="text" name="Username" class="form-control form-control-lg" id="exampleInputUsername1" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input type="password" name="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            @* <div class="mb-4">
                                <div class="form-check">
                                    <label class="form-check-label text-muted">
                                        <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                                    </label>
                                </div>
                            </div> *@

                            <div type="button">
                                <input type="submit" name="signup" class="form-submit" id="signup" value="Register ">
                            </div>

                            <div class="text-center mt-4 font-weight-light">
                                Already have an account? <a asp-action="Login" class="text-primary">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>