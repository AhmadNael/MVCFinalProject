@model Login

@{
    Layout = "~/views/shared/LoginAndRegister.cshtml";
}
<div class="container-scroller">
    <div class="container-fluid page-body-wrapper full-page-wrapper">
        <div class="content-wrapper d-flex align-items-center auth">
            <div class="row flex-grow">
                <div class="col-lg-4 mx-auto">
                    <div class="auth-form-light text-left p-5">
                        <div class="brand-logo">
                            <img src="~/Chef/images/logo-dark.svg">
                        </div>
                        <h4>Hello! let's get started</h4>
                        <h6 class="font-weight-light">Sign in to continue.</h6>
                        <form asp-action="Login" method="post" class="pt-3">
                            <div class="form-group">
                                <input type="text" asp-for="UserName" class="form-control form-control-lg" id="exampleInputEmail1" placeholder="Username">
                            </div>
                            <div class="form-group">
                                <input type="password" asp-for="Password" class="form-control form-control-lg" id="exampleInputPassword1" placeholder="Password">
                            </div>
                            
                            <div class="form-group from-button">
                                <input class="btn-primary" type="submit" name="signup" class="form-submit" id="signup" value="Login ">
                            </div>
                           
                          
                            <div class="text-center mt-4 font-weight-light">
                                Don't have an account? <a asp-action="Register" class="text-primary">Create</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- content-wrapper ends -->
    </div>
    <!-- page-body-wrapper ends -->
</div>